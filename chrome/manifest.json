{
   "manifest_version": 3,
   "name": "Adaptive",
   "author": "The Adaptive Team",
   "homepage_url": "https://adaptive.org.uk",
   "description": "The internet is an amazing place, yet not everyone currently feels at home here.
Let's change that.",
   "version": "0.1",
   "icons": {
       "16": "icon.png",
       "48": "icon.png",
      "128": "icon.png"
    },

   "content_scripts": [{
      "matches": ["https://*/*", "http://*/*"],
      "js": ["inject.js"]
   }],

   "browser_action": {
      "default_title": "Adaptive"
   },

   "background": {
      "scripts": ["background.js"],
      "persistent": false
   },

   "permissions": [
      "https://*/*",
      "http://*/*",
      "tabs",
      "cookies",
      "storage"
   ]
}
