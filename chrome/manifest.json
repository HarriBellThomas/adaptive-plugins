{
   "manifest_version": 3,
   "name": "Adaptive",
   "author": "The Adaptive Team",
   "homepage_url": "https://adaptive.org.uk",
   "description": "Lets you customise the web",
   "version": "0.1",

   "content_scripts": [{
      "matches": ["https://*/*", "http://*/*"],
      "js": ["inject.js"]
   }],

   "browser_action": {
      "default_title": "Adaptive"
   },

   "background": {
      "scripts": ["background.js"],
      "persistent": false
   },

   "permissions": [
      "https://*/*",
      "http://*/*",
      "tabs",
      "cookies",
      "storage"
   ]
}
